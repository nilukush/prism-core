# PRISM Docker Environment Configuration
# This file uses alternative ports to avoid conflicts

# Application
APP_NAME=PRISM
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3100
API_URL=http://localhost:8100
FRONTEND_URL=http://localhost:3100
BACKEND_URL=http://localhost:8100

# Port Configuration (Alternative ports to avoid conflicts)
FRONTEND_PORT=3100
BACKEND_PORT=8100
POSTGRES_PORT=5433
REDIS_PORT=6380
QDRANT_PORT=6334
PGADMIN_PORT=5051
REDISINSIGHT_PORT=8002
FLOWER_PORT=5556

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=generate-a-32-byte-key-for-aes-encryption
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3100

# Database
DATABASE_URL=postgresql+asyncpg://prism:prism_password@postgres:5432/prism_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# PostgreSQL
POSTGRES_USER=prism
POSTGRES_PASSWORD=prism_password
POSTGRES_DB=prism_db

# Redis
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=redis_password
REDIS_SSL=false
REDIS_POOL_SIZE=10

# Vector Database (Qdrant)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=prism_documents
QDRANT_USE_CLOUD=false

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_REQUEST_TIMEOUT=30

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# Local LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Celery Configuration
CELERY_BROKER_URL=redis://:redis_password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:redis_password@redis:6379/2
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_EAGER_PROPAGATES=true

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@prism-ai.dev
SMTP_FROM_NAME=PRISM
SMTP_TLS=true
SMTP_SSL=false

# Email Settings
EMAIL_ENABLED=true
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_RATE_LIMIT_PER_HOUR=10
EMAIL_BATCH_SIZE=50
SUPPORT_EMAIL=support@prism-ai.dev

# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091

# OpenTelemetry
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=prism-backend

# Feature Flags
FEATURE_ANALYTICS_ENABLED=true
FEATURE_MARKETPLACE_ENABLED=false
FEATURE_ENTERPRISE_SSO_ENABLED=false
FEATURE_MULTI_TENANCY_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=3600

# Caching
CACHE_TTL_DEFAULT=300
CACHE_TTL_DOCUMENTS=3600
CACHE_TTL_ANALYTICS=1800

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/prism.log
LOG_FILE_ROTATION=daily
LOG_FILE_RETENTION=30

# CORS
CORS_ORIGINS=http://localhost:3100,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=*

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT=1000
API_TIMEOUT=30
API_MAX_UPLOAD_SIZE=104857600  # 100MB

# Development
DEV_RELOAD=true
DEV_PORT=8100

# Next.js Public Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8100
NEXT_PUBLIC_APP_URL=http://localhost:3100
NEXT_PUBLIC_APP_NAME=PRISM
NEXT_PUBLIC_APP_DOMAIN=localhost:3100
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8100/graphql
NEXT_PUBLIC_WS_URL=ws://localhost:8100/ws

# PGAdmin
PGADMIN_DEFAULT_EMAIL=admin@prism.ai
PGADMIN_DEFAULT_PASSWORD=admin