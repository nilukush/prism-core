# Application Settings
APP_NAME=PRISM
APP_ENV=development
APP_DEBUG=false
APP_VERSION=0.1.0
API_PREFIX=/api/v1
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8100

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://prism:prism_password@postgres:5432/prism_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=redis_password
REDIS_SSL=false
REDIS_POOL_SIZE=10

# Vector Database (Qdrant)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=prism_documents
QDRANT_USE_CLOUD=false

# Email Configuration
EMAIL_ENABLED=true
EMAIL_PROVIDER=smtp  # Options: smtp, sendgrid, aws_ses, mailgun
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@prism-ai.dev
SMTP_FROM_NAME=PRISM
SMTP_TLS=true
SMTP_SSL=false

# Email Service Providers (if not using SMTP)
SENDGRID_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# WebAuthn
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=PRISM

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=3600

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:3002","http://localhost:3003","http://localhost:3004"]
CORS_ALLOW_CREDENTIALS=true

# Feature Flags
FEATURE_ANALYTICS_ENABLED=true
FEATURE_MARKETPLACE_ENABLED=false
FEATURE_ENTERPRISE_SSO_ENABLED=false
FEATURE_MULTI_TENANCY_ENABLED=true
EMAIL_VERIFICATION_REQUIRED=true

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_REQUEST_TIMEOUT=30

# OpenAI
OPENAI_API_KEY=
OPENAI_ORG_ID=
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic
ANTHROPIC_API_KEY=

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# OpenTelemetry
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=prism-backend

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/prism.log
LOG_FILE_ROTATION=daily
LOG_FILE_RETENTION=30

# Worker Configuration
CELERY_BROKER_URL=redis://:redis_password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:redis_password@redis:6379/2
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_EAGER_PROPAGATES=true

# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./uploads
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_STRATEGY=token_bucket  # Options: token_bucket, sliding_window

# DDoS Protection
DDOS_PROTECTION_ENABLED=true
DDOS_MAX_CONNECTIONS_PER_IP=100
DDOS_BLACKLIST_DURATION=3600
DDOS_CHALLENGE_ENABLED=true
BEHIND_PROXY=false  # Set to true if behind reverse proxy (Nginx, CloudFlare, etc.)

# Email Domain Restrictions (Enterprise)
RESTRICT_EMAIL_DOMAINS=false
ALLOWED_EMAIL_DOMAINS=["example.com","company.com"]

# Session Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_HISTORY_COUNT=5
PASSWORD_MAX_AGE_DAYS=90

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=60
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_CAPTCHA=false
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Audit Configuration
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_ENCRYPTION=true

# Compliance
GDPR_ENABLED=false
DATA_RETENTION_DAYS=730
RIGHT_TO_BE_FORGOTTEN_ENABLED=true
DATA_PORTABILITY_ENABLED=true

# Performance
ENABLE_QUERY_CACHE=true
CACHE_TTL_DEFAULT=300
CACHE_TTL_DOCUMENTS=3600
CACHE_TTL_ANALYTICS=1800