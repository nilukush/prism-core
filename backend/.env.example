# Environment
APP_ENV=development
APP_DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/prism

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_dev

# Security
SECRET_KEY=your-secret-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3100

# Email (optional in development)
EMAIL_ENABLED=false
SKIP_EMAIL_VERIFICATION=true

# User Activation Settings
AUTO_ACTIVATE_USERS=true  # Auto-activate users on registration in dev
ALLOW_UNVERIFIED_LOGIN=true  # Allow pending users to login in dev
EMAIL_VERIFICATION_REQUIRED=false  # Disable email verification in dev

# Admin
ADMIN_ACTIVATION_KEY=dev-activate-key  # Key for bulk activation endpoint

# AI Providers (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=