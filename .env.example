# PRISM Environment Configuration Example
# Copy this file to .env and update with your values
# NEVER commit .env files to version control

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Backend Configuration
BACKEND_URL=http://localhost:8100
BACKEND_PORT=8100

# Frontend Configuration  
FRONTEND_URL=http://localhost:3100
FRONTEND_PORT=3100

# Database Configuration
DATABASE_URL=postgresql://prism:prism_password@localhost:5432/prism_db
POSTGRES_USER=prism
POSTGRES_PASSWORD=prism_password
POSTGRES_DB=prism_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=43200

# API Keys (Replace with your own)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Email Configuration (Optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Security
CORS_ORIGINS=http://localhost:3100,http://localhost:3000
SECRET_KEY=your-secret-key-here-change-in-production

# Feature Flags
AUTO_ACTIVATE_USERS=true
EMAIL_VERIFICATION_REQUIRED=false