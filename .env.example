# Application
APP_NAME=PRISM
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=generate-a-32-byte-key-for-aes-encryption

# Database
DATABASE_URL=postgresql+asyncpg://prism:prism_password@localhost:5432/prism_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_POOL_SIZE=10

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=prism_documents
QDRANT_USE_CLOUD=false

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_REQUEST_TIMEOUT=30

# OpenAI
OPENAI_API_KEY=
OPENAI_ORG_ID=
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic
ANTHROPIC_API_KEY=

# Local LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Integrations
# Jira
JIRA_URL=https://your-company.atlassian.net
JIRA_EMAIL=
JIRA_API_TOKEN=
JIRA_DEFAULT_PROJECT=

# Confluence
CONFLUENCE_URL=https://your-company.atlassian.net
CONFLUENCE_EMAIL=
CONFLUENCE_API_TOKEN=
CONFLUENCE_DEFAULT_SPACE=

# Slack
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_DEFAULT_CHANNEL=

# GitHub
GITHUB_TOKEN=
GITHUB_ORG=
GITHUB_WEBHOOK_SECRET=


# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=PRISM
SMTP_TLS=true
SMTP_SSL=false

# Email Settings
EMAIL_ENABLED=true
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_RATE_LIMIT_PER_HOUR=10
EMAIL_BATCH_SIZE=50
SUPPORT_EMAIL=support@example.com
FRONTEND_URL=http://localhost:3000

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# OpenTelemetry
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=prism-backend

# Feature Flags
FEATURE_ANALYTICS_ENABLED=true
FEATURE_MARKETPLACE_ENABLED=false
FEATURE_ENTERPRISE_SSO_ENABLED=false
FEATURE_MULTI_TENANCY_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=3600

# Caching
CACHE_TTL_DEFAULT=300
CACHE_TTL_DOCUMENTS=3600
CACHE_TTL_ANALYTICS=1800

# Worker Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_EAGER_PROPAGATES=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/prism.log
LOG_FILE_ROTATION=daily
LOG_FILE_RETENTION=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=*

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT=1000
API_TIMEOUT=30
API_MAX_UPLOAD_SIZE=104857600  # 100MB

# Development
DEV_RELOAD=true
DEV_PORT=8000
DEV_HOST=0.0.0.0

# Testing
TEST_DATABASE_URL=postgresql+asyncpg://prism:prism_password@localhost:5432/prism_test
TEST_REDIS_URL=redis://localhost:6379/15